[Unit]
Description=Tomcat10
After=network.target

[Service]
Type=forking


Environment=JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.402.b06-1.el7_9.x86_64/
Environment=CATALINA_HOME=/opt/apache-tomcat-10
Environment=CATALINA_BASE=/opt/apache-tomcat-10

ExecStart=/opt/apache-tomcat-10/bin/startup.sh
ExecStop=/opt/apache-tomcat-10/bin/shutdown.sh

[Install]
WantedBy=multi-user.target